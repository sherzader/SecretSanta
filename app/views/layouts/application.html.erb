<!DOCTYPE html>
<html>
<head>
  <title>SecretSanta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
    .errors {
      color: red;
      border-radius: 5px;
    }
    .banner {
      color: red;
      background-color: green;
      padding: 5px;
      text-align: center;
      font-size: 50px;
      font-weight: 300;
      font-family: "Lucida Handwriting";
      border-style: groove;
      border-color: red;
      border-width: 8px;
    }
    .headline {
      font-family: "Brush Script MT";
      font-size: 40px;
      text-align: center;
    }
    .users {
      text-align: center;
      font-family: cursive;
      font-size: 20px;
    }
    .current_user {
      font-family: cursive;
      font-size: 15px;
    }
  </style>
</head>
<body>
    <div class="banner">
      Secret Santa
    </div>
    <% if logged_in? %>
      <nav class="navbar navbar-default">
      <ul class="nav nav-pills">
        <!--MySecretSanta will link to that user's profile/show page -->
       <li><a href="<%= user_url(current_user) %>">My Secret Santa</a></li>
       <li><a href="<%= edit_user_url %>">My Profile</a></li>
      </ul>
      </nav>
      <p class="current_user"><%= current_user.name %></p>
      <%= button_to "Log Out", session_url, method: :delete %>
    <% else %>
      <%= button_to "Log In", new_session_url, method: :get %>
      <%= button_to "Sign Up", new_user_url, method: :get %>
    <% end %>

  <div class="container">
    <p class="errors"><%= render "layouts/errors" %></p>
    <%= yield %>
  </div>

</body>
</html>
